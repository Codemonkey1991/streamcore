div.stream_list
    $header_height = 50px;
    $status_height = 30px;
    position: fixed;

    user-select: none;

    > div.header
        position: absolute;
        top: 0px;
        right: 0px;
        left: 0px;
        height: $header_height - 2;

        border-radius: 2px 2px 0px 0px;
        border-top: 1px solid rgba(255, 255, 255, 0.2);
        border-left: 1px solid rgba(255, 255, 255, 0.05);
        border-right: 1px solid rgba(255, 255, 255, 0.05);
        border-bottom 1px solid rgba(0, 0, 0, 1);

        background: linear-gradient(top, #333333 0%, #222222 100%);
        box-shadow: inset 0px 2px 5px rgba(0, 0, 0, 0.1);

        div.logo
            position: absolute;
            top: 5px;
            left: 5px;
            width: 60px;
            height: 36px;

            border: 1px solid rgba(255, 255, 255, 0.1);
            box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.8);
            background-size: cover;

        div.name
            position: absolute;
            top: 13px;
            left: 80px;
            right: 5px;
            overflow: hidden;

            color: #DDDDDD;
            font-size: 15px;
            font-weight: bold;
            white-space: nowrap;
            text-shadow: -1px -1px 5px rgba(0, 0, 0, 1);

    > div.status
        position: absolute;
        top: $header_height;
        right: 0px;
        left: 0px;
        height: $status_height;

        $color = #345678;

        border-left: 1px solid rgba(255, 255, 255, 0.2);
        border-right: 1px solid rgba(255, 255, 255, 0.2);

        background-color: $color;
        background: linear-gradient(
            top,
            lighten($color, 20%) 0%,
            lighten($color, 15%) 49%,
            $color 51%,
            darken($color, 5%) 100%
        );
        box-shadow: 0px 0px 50px rgba(0, 0, 0, 1);

        div.loading
            position: absolute;
            top: 7px;
            left: 7px;
            width: 16px;
            height: 16px;
            background-image: url(/static/images/stream_list_loading.gif);

        div.loading + div.message
            left: 32px;

        div.message
            position: absolute;
            top: 6px;
            left: 7px;

            text-shadow: -1px -1px 3px rgba(0, 0, 0, 1);

    div.streams
        position: absolute;
        top: $header_height + $status_height;
        right: 0px;
        bottom: 0px;
        left: 0px;

        overflow-y: auto;

        div.stream
            $background-color = #444444;
            position: relative;
            width: 100%;
            height: 38px;
            overflow: hidden;
            margin: 3px 0px;

            background: linear-gradient(
                top,
                $background-color 0%,
                darken($background-color, 10%) 100%
            );
            box-shadow: inset 0px 1px 0px rgba(255, 255, 255, 0.2);
            cursor: pointer;

            &:hover
                background: linear-gradient(
                    top,
                    lighten($background-color, 10%) 0%,
                    $background-color 100%
                );

            div.screencap
                width: 50px;
                height: 38px;
                background-size: cover;
                box-shadow: 4px 0px 5px rgba(0, 0, 0, 0.4);

            div.status
                position: absolute;
                top: 2px;
                right: 5px;
                left: 57px;
                overflow: hidden;

                font-size: 13px;
                font-weight: bold;
                white-space: nowrap;
                color: #DDDDDD;
                text-shadow: 1px 1px 5px rgba(0, 0, 0, 1);

            div.name
                position: absolute;
                top: 20px;
                left: 57px;

                color: #999999;
                font-size: 11px;
                text-shadow: -1px -1px 1px rgba(0, 0, 0, 1);

