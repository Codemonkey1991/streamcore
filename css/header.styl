header
    z-index: 0;

    position: fixed;

    user-select: none;

    background-image: url($images + '/carbon_background.png');
    background-repeat: repeat;

    > div.highlight 
        fill();

        background-image: url($images + '/background_highlight.png');
        background-repeat: no-repeat;
        background-position: center center;

        z-index: 0;

    nav
        position: absolute;
        right: 0px;
        left: 0px;
        height: 30px;

        text-align: center;

        white-space: nowrap;

        // Appearance.
        border-top: 1px solid #111;
        border-bottom: 1px solid #111;

        background: linear-gradient(top, #333333 0%, #272727 100%);
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.4),
                    inset 0px -1px 0px rgba(255, 255, 255, 0.07);

        > div.inner
            display: inline-block;

        a
            display: block;
            float: left;
            padding-left: 15px;
            padding-right: 15px;
            padding-top: 6px;
            padding-bottom: 7px;

            color: #EEEEEE;
            text-shadow: 0px 0px 6px rgba(0, 0, 0, 1);
            text-decoration: none;
            border-right: 1px solid black;
            box-shadow: inset -1px 0px 0px #333;

            transition: background 200ms ease-in-out;

            &:last-child
                border-right: none;
                box-shadow: none;

            &:hover
                background: linear-gradient(top, #666666 0%, #444444 100%);

            &:active
                background: linear-gradient(top, #555555 0%, #484848 100%);
                box-shadow: inset 0px 0px 7px rgba(0, 0, 0, 0.5);

            &.red
                $color = darken(#A30505, 10%);
                background: linear-gradient(
                    top, $color 0%, darken($color, 30%) 100%
                );
                box-shadow: inset -1px 0px 0px darken($color, 20%),
                            inset 0px -1px 0px rgba(255, 255, 255, 0.17);

                &:hover
                    background: linear-gradient(
                        top, lighten($color, 10%) 0%, darken($color, 20%) 100%
                    );

                &:active
                    background: linear-gradient(
                        top, darken($color, 20%) 0%, darken($color, 20%) 100%
                    );

                &:last-child
                    box-shadow: 5px 0px 10px rgba(0, 0, 0, 0.3),
                                inset -1px 0px 0px darken($color, 20%),
                                inset 0px -1px 0px rgba(255, 255, 255, 0.17);

    &.big
        height: $big_header_height;

        div.logo
            position: absolute;
            width: 626px;
            height: 151px;
            left: 50%;
            margin-left: -313px;

            background-image: url($images + '/logo.png');

        nav
            bottom: 20px;

    &.small
        z-index: 2;

        height: $small_header_height;
        border-bottom: 1px solid #111111;
        box-shadow: 0px 0px 30px rgba(30, 60, 90, 0.75);

        a.small_logo
            z-index: 2;

            position: absolute;
            top: 10px;
            width: 130px;
            height: 27px;
            padding-top: 3px;
            padding-left: 10px;

            background-color: #000000;
            color: #EEEEEE;
            font: 18px "Open sans";
            font-weight: bold;
            text-decoration: none;

            transition: color 200ms ease-out;

            &:hover
                background-color: #AAAAAA;
                color: #333333;

        nav
            bottom: 9px;

            z-index: 1;

